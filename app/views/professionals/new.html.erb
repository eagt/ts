<% provide(:title, 'Create Professional') %>

<!-- <% @page_title = t(:professional).pluralize(locale) %>  --> 

<%= link_to("<< " + t(:return_to), [@current_user, params[:controller]], :class => 'back-link') %>

<div class="professionals new">

<h1><%= @is_company ? @current_user.name : f.collection_select(:company_id, @current_user.companies, :id, :name,include_blank: true) %></h1> <!-- Ccrouds -->

  <h2><%= t(:create) + " " + t(:professional) %></h2>
        

  <%= form_for([@current_user, @professional]) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= submit_tag(t(:create) + " " + t(:professional)) %>
    </div>

  <% end %>

</div>