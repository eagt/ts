<% provide(:title, 'Edit User') %>
<% @page_title = "Edit User: #{@user.name}" -%>  <!-- This may cause problems -->

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<!-- When action is implemented fully, I must be able to update all the users details -->

<div class="user edit">
  <h1>Edit User</h1>
  <%= error_messages_for(@user) %>

	  <%= form_for(:user, :url => {:action => 'update', :id => @user.id}) do |f| %>
	  <%= render(:partial => 'shared/form', :locals => {:f => f} ) %>
	<div class="form_buttons">
	   <%= submit_tag('Update User') %>
	</div>
  	  <% end %>
</div>
