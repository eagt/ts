<% @page_title = t(:appointment).pluralize(locale) %>

<%= link_to("<< " + t(:return_to), [@current_user, params[:controller]], :class => 'back-link') %>

<div class="appointment delete">

<h1><%= @is_company ? @current_user.name : f.collection_select(:company_id, @current_user.companies, :id, :name,include_blank: true) %></h1> <!-- Ccrouds -->


	<h2><%= t(:delete) + " " + t(:appointment) %></h2>

	<%= form_for([@current_user, @appointment], :html => {:method => :delete}) do |f| %>

		<p> <%= t(:delete_message) %> </p>

		<p class="reference-name"><%= @appointment.date_time %></p>

		<div class="form-buttons">
			<%= submit_tag(t(:delete) + " " + t(:appointment)) %>
		</div>
	<% end %>
</div>